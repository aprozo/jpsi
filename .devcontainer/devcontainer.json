{
    "name": "Jupyter with pandas and numpy",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "forwardPorts": [
        8888
    ],
    "postCreateCommand": "pip install --upgrade pip && pip install pandas numpy matplotlib scipy",
    "remoteUser": "root"
}